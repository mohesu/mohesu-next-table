{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*", // Ensure all your source files are included
    "next-env.d.ts" // Include Next.js environment types
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    ".next" // Exclude Next.js build folder
  ]
}
