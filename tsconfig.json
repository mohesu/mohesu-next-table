{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx", // Enables JSX handling in TypeScript
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // Mapping custom paths
    }
  },
  "include": [
    "src/**/*", // Ensure all your source files are included
    "next-env.d.ts" // Include Next.js environment types
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    ".next" // Exclude Next.js build folder
  ]
}
